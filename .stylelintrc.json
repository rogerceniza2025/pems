{
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "theme",
          "config",
          "extend",
          "include"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "dist/**/*",
    "build/**/*",
    "**/*.min.css",
    "**/node_modules/**/*"
  ]
}