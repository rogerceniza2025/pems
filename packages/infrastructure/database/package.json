{
  "name": "@pems/database",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:migrate-users": "tsx src/migration/migrate-users.ts"
  },
  "dependencies": {
    "@pems/middleware": "workspace:*",
    "@pems/shared-types": "workspace:*",
    "@pems/shared-utils": "workspace:*",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "pg": "^8.16.3",
    "prisma": "^7.0.1"
  },
  "devDependencies": {
    "@pems/config-typescript": "workspace:*",
    "@prisma/config": "^7.0.1",
    "@types/node": "^24.10.1",
    "prisma": "^7.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
