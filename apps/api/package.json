    "@pems/shared": "workspace:*",
    "@pems/database": "workspace:*",
    "@pems/auth": "workspace:*",
    "@pems/rpc": "workspace:*",
    "better-auth": "^1.4.3",
    "hono": "^4.10.7",
    "orpc": "^0.1.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@pems/config-typescript": "workspace:*",
    "@types/node": "^22.10.5",
    "playwright": "^1.50.0",
    "tsx": "^4.20.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
