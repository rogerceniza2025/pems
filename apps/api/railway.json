{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm build",
    "buildEnv": {
      "NODE_ENV": "production",
      "TURBO_TOKEN": "$TURBO_TOKEN",
      "TURBO_TEAM": "$TURBO_TEAM"
    }
  },
  "deploy": {
    "startCommand": "pnpm start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "port": 3000,
    "env": {
      "NODE_ENV": "production",
      "PORT": "3000",
      "HOST": "0.0.0.0"
    }
  }
}