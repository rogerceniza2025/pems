{
  "extends": "@pems/config-typescript/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "rootDir": "./src",
    "paths": {
      "@pems/*": ["../../packages/*"],
      "@modules/*": ["../../modules/*"]
    }
  },
  "include": ["src/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "build"]
}
