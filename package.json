{
  "name": "pems",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "serve": "pnpm run --parallel serve",
    "test": "pnpm run --recursive test",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:changed": "vitest run --changed --since=main",
    "test:tdd": "./scripts/tdd-watch.sh",
    "test:validate": "./scripts/tdd-validate.sh",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:debug": "vitest --inspect-brk",
    "test:domain": "vitest run tests/unit/domain/** -- --coverage",
    "test:enforce": "node scripts/tdd-enforcement.js",
    "test:coverage-validate": "node scripts/coverage-validation.js",
    "type-check": "pnpm run --recursive type-check",
    "lint": "pnpm run --recursive lint",
    "lint:styles": "stylelint \"**/*.css\" \"**/*.scss\" \"**/*.less\" --cache",
    "lint:styles:fix": "stylelint \"**/*.css\" \"**/*.scss\" \"**/*.less\" --fix --cache",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix && pnpm run lint:styles:fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:visual": "test-storybook",
    "test:visual:ci": "test-storybook --ci",
    "test:visual:percy": "playwright test --config=playwright-visual.config.ts tests/visual/percy/",
    "test:visual:responsive": "playwright test --config=playwright-visual.config.ts tests/visual/responsive/",
    "test:visual:themes": "playwright test --config=playwright-visual.config.ts tests/visual/themes/",
    "test:visual:storybook": "playwright test --config=playwright-visual.config.ts tests/visual/storybook/",
    "test:visual:critical": "playwright test --config=playwright-visual.config.ts tests/visual/percy/critical-journeys.test.ts",
    "test:visual:all": "playwright test --config=playwright-visual.config.ts tests/visual/",
    "test:visual:cross-browser": "playwright test --config=playwright-visual.config.ts --project=visual-chrome --project=visual-firefox --project=visual-webkit",
    "test:visual:mobile": "playwright test --config=playwright-visual.config.ts --project=visual-mobile --project=visual-tablet",
    "test:performance": "k6 run tests/performance/k6/config/load-test.js",
    "test:performance:frontend": "k6 run tests/performance/frontend/core-web-vitals.test.js",
    "test:performance:user-journey": "k6 run tests/performance/frontend/user-journey-performance.test.js",
    "test:performance:api": "k6 run tests/performance/frontend/api-response-time.test.js",
    "test:performance:network": "k6 run tests/performance/network/network-conditions.test.js",
    "test:performance:latency": "k6 run tests/performance/network/latency-injection.test.js",
    "test:performance:bundle": "k6 run tests/performance/bundle-analysis/bundle-size-impact.test.js",
    "test:performance:bundle-analysis": "node scripts/performance-budget.js --report",
    "test:performance:budget": "node scripts/performance-budget.js",
    "test:performance:regression": "node scripts/performance-regression-gate.js",
    "test:performance:regression:enforce": "node scripts/performance-regression-gate.js --enforce --report",
    "test:performance:watch": "k6 run --vus 100 --duration 30s tests/performance/k6/config/load-test.js",
    "test:performance:load": "k6 run --vus 1000 --duration 2m tests/performance/k6/config/load-test.js",
    "test:performance:stress": "k6 run --vus 10000 --duration 5m tests/performance/k6/config/load-test.js",
    "test:performance:sla": "node scripts/performance-sla-validator.js",
    "test:security": "vitest run tests/security/** -- --coverage",
    "test:security:owasp-a01": "playwright test tests/security/owasp/broken-access-control.test.ts",
    "test:security:owasp-a02": "playwright test tests/security/owasp/cryptographic-failures.test.ts",
    "test:security:owasp-a07": "playwright test tests/security/owasp/authentication-failures.test.ts",
    "test:security:owasp": "playwright test tests/security/owasp/*.test.ts",
    "test:security:api": "playwright test tests/security/api/openapi-security.test.ts",
    "test:secrets:gitguardian": "ggshield scan ci .",
    "test:secrets:gitleaks": "gitleaks detect --verbose --report-path gitleaks-report.json",
    "test:secrets:trivy": "trivy fs . --security --scanners vuln,secret --format json --output trivy-secrets.json",
    "test:secrets:all": "pnpm test:secrets:gitguardian && pnpm test:secrets:gitleaks && pnpm test:secrets:trivy",
    "test:security:dependencies": "snyk test --severity-threshold=high",
    "test:accessibility": "playwright test --grep @accessibility",
    "test:chaos": "vitest run tests/chaos/** -- --coverage",
    "test:contracts": "vitest run tests/contracts/** -- --coverage",
    "test:contracts:consumer": "vitest run tests/contracts/consumer/** -- --coverage",
    "test:contracts:provider": "node scripts/contract-verify.js all",
    "test:contracts:provider-auth": "node scripts/contract-verify.js provider --provider=pems-auth-service --provider-url=http://localhost:3001",
    "test:contracts:provider-user": "node scripts/contract-verify.js provider --provider=pems-user-service --provider-url=http://localhost:3002",
    "test:contracts:provider-tenant": "node scripts/contract-verify.js provider --provider=pems-tenant-service --provider-url=http://localhost:3004",
    "test:contracts:provider-notification": "node scripts/contract-verify.js provider --provider=pems-notification-service --provider-url=http://localhost:3003",
    "test:contracts:integration": "vitest run tests/contracts/integration/** -- --coverage",
    "test:contracts:schemas": "vitest run tests/contracts/schemas/** -- --coverage",
    "test:contracts:publish": "node scripts/contract-publish.js publish",
    "test:contracts:tag": "node scripts/contract-publish.js tag",
    "test:contracts:all": "pnpm test:contracts:consumer && pnpm test:contracts:integration && pnpm test:contracts:schemas && pnpm test:contracts:publish && pnpm test:contracts:provider",
    "test:contracts:verify": "node scripts/contract-verify.js all",
    "test:analytics:collect": "node scripts/coverage-validation.js",
    "test:analytics:coverage": "node scripts/analytics/collectors/CoverageCollector.js",
    "test:analytics:performance": "node scripts/analytics/collectors/PerformanceCollector.js",
    "test:analytics:report": "node scripts/performance-regression-gate.js --report",
    "test:analytics:quality": "node scripts/performance-budget.js --report",
    "test:contracts:ci": "pnpm test:contracts:consumer && pnpm test:contracts:integration && pnpm test:contracts:schemas",
    "start": "node .output/server/index.mjs",
    "kill-ports": "powershell -ExecutionPolicy Bypass -File ./kill-ports.ps1",
    
    "pre-commit": "node scripts/tdd-enforcement.js && node scripts/coverage-validation.js && node scripts/performance-budget.js --check-only && lint-staged && pnpm test:secrets:gitguardian",
    "pre-push": "pnpm test && pnpm build && pnpm test:performance:budget && pnpm test:security:dependencies && pnpm test:contracts:all",
    
    "coverage:serve": "npx serve coverage",
    "coverage:clean": "rm -rf coverage test-results"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@kobalte/core": "^0.13.11",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/router-plugin": "^1.139.12",
    "@tanstack/solid-router": "^1.139.12",
    "@tanstack/solid-router-devtools": "^1.139.12",
    "@tanstack/solid-start": "^1.139.12",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "lucide-solid": "^0.555.0",
    "nitro": "latest",
    "solid-js": "^1.9.10",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^10.1.2",
    "@storybook/blocks": "^8.6.14",
    "@storybook/html": "^10.1.2",
    "@storybook/html-vite": "^10.1.2",
    "@storybook/test-runner": "^0.24.2",
    "@storybook/testing-library": "^0.2.2",
    "@tanstack/devtools-vite": "^0.3.11",
    "@tanstack/eslint-config": "^0.3.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.14",
    "axe-core": "^4.8.0",
    "@axe-core/playwright": "^4.8.0",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.4.4",
    "chromatic": "^6.20.0",
    "eslint": "^9.39.1",
    "eslint-plugin-solid": "^0.14.5",
    "jsdom": "^27.2.0",
    "jsonwebtoken": "^9.0.2",
    "k6": "^0.47.0",
    "@k6/http": "^0.47.0",
    "@k6/html": "^0.47.0",
    "owasp-zap-baseline": "^0.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "snyk": "^1.1200.0",
    "storybook": "^10.1.2",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "testcontainers": "^10.0.0",
    "toxiproxy-node": "^2.0.0",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.14",
    "@pact-foundation/pact": "^12.0.0",
    "@pact-foundation/pact-node": "^14.0.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.13.2",
    "ws": "^8.14.2"
  }
}
